{% extends 'baseChefMention.html.twig' %}

{% block title %}Liste{% endblock %}

{% block body %}
    <div class="title m-3">
        <h4>Liste des étudiants avec leurs encadrants pédagogiques</h4>
    </div>
    <div class="content">
        <table class="table table-striped">
            <thead class="bg-warning text-center" style="font-weight:bold">
                <td >id_etudiant</td>
                <td>Nom étudiant</td>
                <td>Prénom étudiant</td>
                <td>Nom enseignant</td>
                <td>Prénom enseignant</td>
            </thead>
            {% for user in users %}
            <tbody >
            {% if  user != null %}
                <tr>
                    <td class="text-center"  style="font-weight:bold">{{ user.id }}</td>
                    <td class="text-center">{{ user.name }}</td>
                    <td class="text-center"> {{ user.firstname }}</td>
                    <td class="text-center">{{ user.user.name }}</td>
                    <td class="text-center">{{ user.user.firstname }}</td>
            {% endif %}

             </tbody>
            {% endfor %}
        </table>
    </div>


{% endblock %}

