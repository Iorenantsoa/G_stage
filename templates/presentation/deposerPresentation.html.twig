{% extends 'base.html.twig' %}

{% block title %}Déposer votre présentation{% endblock %}

{% block body %}
    <div class="mt-3">
        {{form_start(presentationForm)}}
            <h1 >Déposer votre présentation</h1>
            <div class="form-group">
                <label for="sujet">Titre</label>
                {{form_widget(presentationForm.titre)}}
            </div>
            <div class="form-group">
                <label for="sujet">Déscription</label>
                {{form_widget(presentationForm.description)}}
            </div>
            <div class="form-group">
                <label for="sujet">Fichier</label>
                {{form_widget(presentationForm.fichier)}}
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success col col-4 mt-3" value="Valider">
            </div>
        {{form_end(presentationForm)}}
    </div>


{% endblock %}
