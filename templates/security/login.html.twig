{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class=" mt-5 d-flex justify-content-center align-items-center" >
    <div  style=" width:50%;margin:auto ;padding:0;">
        <form method="post">
            {% if error %}
                {# <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div> #}
                <div class="alert alert-danger text-center">Mauvais login ou mot de passe.</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <label for="inputEmail">Email</label>
            <input placeholder="user@user.com "style= "border:0;border-bottom:2px solid black ;" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label for="inputPassword">Password</label>
            <input placeholder="type your password" type="password" style= "border:0;border-bottom:2px solid black ;" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate')}}"
            >

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox"name="_remember_me"> Remember me
                    </label>
                </div>
        
            <div class="row">
                <a class="btn btn-sm btn-primary  col-6" href="{{path('app_register')}}">
                    Register
                </a>
                <button class="btn btn-md btn-success col-6" type="submit">
                    Sign in
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
